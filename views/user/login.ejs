<%- include('../partials/head'); -%>
    <div class="wrapper">
        <div class="title-text">
          <div class="title login">Login Form</div>
        </div>
        <div class="form-container">
          <div class="slide-controls">
            <input type="text" name="slide" id="login" style="margin: -100px;" >
            <label for="login" class="slide login">Login</label>
    
            <div class="slider-tab"></div>
          </div>
          <div class="form-inner">
            <form action="/login" class="login" method="post">
              <div class="field">
                <input type="text" name="name" placeholder="Name" required>
              </div>
              
              <div class="field">
                <input type="password" name="password" placeholder="Password" required>
              </div>
              
              <div class="field btn">
                <div class="btn-layer" style="margin-top: -6px;" ></div>
                <input type="submit" value="Login">
              </div>
              <div class="signup-link">Not a member? <a href="/signup">Signup now</a></div>
            </form>
          
          </div>
        </div>
        <% 
        if(typeof message !== 'undefined'){ 
            %>
                <p style="color:red;margin-left: 45px;"><%= message%> </p>
            <%
        }
      %>
      </div>
      
      <%- include( '../partials/footer') %>